@model EventManagement.Model.user
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        #login {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 10px 10px 10px;
        }
    </style>
</head>
<body>
    <h1>Login Here</h1>
    <table id="login">
        @using (Html.BeginForm("answer", "UserLogin", FormMethod.Post))
        {
            <tr>
                <td>@Html.LabelFor(Model => Model.name)</td>
                <td>@Html.EditorFor(Model => Model.name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => Model.password)</td>
                <td>@Html.EditorFor(model => Model.password)</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" name="name" value="Login" />
                    <input type="reset" name="name" value="clear" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <label class="field-validation-error">@Html.DisplayFor(Model => Model.LoginErrorMessage)</label>
                </td>
            </tr>
        }

    </table>

</body>
</html>

